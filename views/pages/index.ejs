<!DOCTYPE html>
<html>
    <%- include('../layout/head')%>
    <link rel="stylesheet" href="styles/header.css"/>
  <body>
    <%- include('../layout/header')%>
  <main>
     
      <div id="title">My Book Shelf</div>
    <div>
      <% bookshelf.forEach( element => { %>
       <div>
          <img src="<%= element.img_url%>" class="bImage">
          <p id="titleA">Title: <%= element.title %></p>
          <p id="author">Author: <%= element.author%></p>
          <p id="author">ISBN: <%= element.isbn%></p>
          <p id="description">Description: <%=element.description%></p>
          <a href="/books/details/<%= element.id %>">View Details</a>
          </div>
      <%})%>
      </div>
      <div>
        
      </div>
  </main>
    <%- include('../layout/footer') %>
    <script src="/js/app.js"></script>
  </body>
</html>