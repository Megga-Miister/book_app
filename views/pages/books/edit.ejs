<form action = "<%=`/`%>"  method = "post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="img_url" value="<%- book.img_url%>">
  <input type="text" name="title" value="<%= book.title %>" placeholder="<%= book.title %>"/>
  <input type="text" name="author" value="<%= book.author %>" placeholder="<%= book.author %>"/>
  <input type="text" name="isbn" value="<%= book.isbn %>" placeholder="<%= book.isbn %>"/>
  <textarea type="text" name="description"value="<%= book.description %>" cols="25" rows="8" placeholder="<%= book.description %>"><%= book.description %></textarea>
  <input type="hidden" name="image_url" value="<%= book.image_url %>" >
  <button type = submit class="editbut">Edit Book</button>
</form>